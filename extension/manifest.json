{
    "manifest_version": 3,
    "name": "TimeWellSpent Companion",
    "version": "0.1.0",
    "description": "Companion extension that defers to the TimeWellSpent desktop app for paywall decisions.",
    "permissions": [
        "tabs",
        "activeTab",
        "scripting",
        "storage",
        "idle",
        "webNavigation",
        "contextMenus"
    ],
    "host_permissions": [
        "http://localhost:17600/*",
        "<all_urls>"
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "src/content.js",
                "assets/*",
                "src/content.css"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "background": {
        "service_worker": "src/background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content-loader.js"
            ]
        }
    ]
}